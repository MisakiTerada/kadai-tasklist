<% if logged_in? %>
   <p>Login User : <%= @current_user.name %></p>
   <div class="row">
     <aside class="col-md-4">
       <%= form_for(@task) do |f| %>
       <div class="form-group">
          <%= f.label :status, 'ステータス' %>
          <%= f.text_field :status,class: "form-control" ,rows: 2%>
        </div>
  
        <div class="form-group">
          <%= f.label :content, 'タスク' %>
          <%= f.text_area :content,class: "form-control" ,rows: 4%>
        </div>

        <%= f.submit '投稿',class: "btn btn-primary" %>
        <% end %>
    </aside>
    
      <div class="col-xs-8">
      <%= render 'tasks/tasklists', tasks: @tasks %>
    </div>
   </div>
<% else %>
<div class = "center jumbotron">
  <div class = "text-center">
    <h1>Welcome to the Tasklist</h1>
    <%= link_to "Sign up now!" , signup_path, class: "btn btn-primary btn-block" %>
  </div>
</div>
<% end %>