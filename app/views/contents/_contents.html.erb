<ul class="media-list">
  <% contents.each do |content| %>
  <li class="media">
    <div class="media-left">
      <img class="media-object img-rounded" src="<% gravatar_url(content.user,{ size: 50}) %>" alt="">
    </div>
    <div class="media-body">
      <div>
        <%= link_to content.user.name, user_path(content.user) %> <span class="text-muted">posted at <%= content.created_at %></span>
      </div>
      <div>
        <p><%= content.content %></p>
      </div>
      <div>
          <% if current_user == content.user %>
            <%= link_to "Delete", content, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
        </div>
    </div>
  </li>
  <% end %>
  <%= paginate contents %>
</ul>